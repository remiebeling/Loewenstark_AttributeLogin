<?xml version="1.0"?><config>    <modules>        <Loewenstark_AttributeLogin>            <version>0.0.1</version>        </Loewenstark_AttributeLogin>    </modules>    <global>        <helpers>            <attributelogin>                <class>Loewenstark_AttributeLogin_Helper</class>            </attributelogin>        </helpers>        <models>            <attributelogin>                <class>Loewenstark_AttributeLogin_Model</class>            </attributelogin>        </models>        <blocks>            <attributelogin>                <class>Loewenstark_AttributeLogin_Block</class>            </attributelogin>            <customer>                <rewrite>                    <form_login>Loewenstark_AttributeLogin_Block_Customer_Form_Login</form_login>                </rewrite>            </customer>        </blocks>    </global>    <frontend>        <translate>            <modules>                <Loewenstark_AttributeLogin>                    <files>                        <default>Loewenstark_AttributeLogin.csv</default>                    </files>                </Loewenstark_AttributeLogin>            </modules>        </translate>        <events>            <controller_action_predispatch_customer_account_loginPost>                <observers>                    <attributelogin>                        <class>attributelogin/observer</class>                        <method>loginCustomer</method>                    </attributelogin>                </observers>            </controller_action_predispatch_customer_account_loginPost>            <controller_action_postdispatch_customer_account_loginPost>                <observers>                    <attributelogin>                        <class>attributelogin/observer</class>                        <method>afterLoginTry</method>                    </attributelogin>                </observers>            </controller_action_postdispatch_customer_account_loginPost>        </events>    </frontend>    <adminhtml>        <acl>            <resources>                <admin>                    <children>                        <system>                            <children>                                <config>                                    <children>                                        <attributelogin>                                            <title>Loewenstark Attribute Login</title>                                        </attributelogin>                                    </children>                                </config>                            </children>                        </system>                    </children>                </admin>            </resources>        </acl>        <translate>            <modules>                <Loewenstark_AttributeLogin>                    <files>                        <default>Loewenstark_AttributeLogin.csv</default>                    </files>                </Loewenstark_AttributeLogin>            </modules>        </translate>    </adminhtml></config>